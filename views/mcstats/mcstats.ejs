  <div class="music-player">
    <audio id="audio-player" controls autoplay>
        <source src="https://claq.fr/host/my_music/unity.mp3" type="audio/mpeg">      Your browser does not support the audio element.
    </audio>
    <h2 id="song-title"></h2>
    <p id="artist-name"></p>
    <p id="song-duration"></p>
  </div>

  <script>
    // JavaScript to update song information
    const audioPlayer = document.getElementById('audio-player');
    const songTitle = document.getElementById('song-title');
    const artistName = document.getElementById('artist-name');
    const songDuration = document.getElementById('song-duration');

    const songs = '<%- JSON.stringify(songs) %>';

    audioPlayer.addEventListener('loadedmetadata', () => {
      const duration = formatTime(audioPlayer.duration);
      songDuration.textContent = `Duration: ${duration}`;
    });

    audioPlayer.addEventListener('play', () => {
      const currentSong = songs.find(song => song.path === audioPlayer.currentSrc);
      if (currentSong) {
        songTitle.textContent = currentSong.title;
        artistName.textContent = currentSong.artist;
      }
    });

    function formatTime(seconds) {
      const minutes = Math.floor(seconds / 60);
      const remainingSeconds = Math.floor(seconds % 60);
      const formattedTime = `${minutes}:${remainingSeconds < 10 ? '0' : ''}${remainingSeconds}`;
      return formattedTime;
    }
  </script>
</body>
</html>
