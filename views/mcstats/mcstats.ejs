<!DOCTYPE html>
<html>
<head>
  <title>Responsive Music Player</title>
  <style>
    /* CSS for the music player */
    .music-player {
      text-align: center;
    }
    
    /* CSS for the responsive layout */
    @media screen and (max-width: 600px) {
      .music-player {
        width: 100%;
      }
    }
    
    /* CSS for the library */
    .library {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      margin-top: 20px;
    }
    
    .library-item {
      margin: 10px;
    }
    
    .library-item img {
      width: 100px;
      height: 100px;
    }
  </style>
</head>
<body>
  <div class="music-player">
    <audio id="audio-player" controls autoplay>
      <!-- Remove the static source element -->
      Your browser does not support the audio element.
    </audio>
    <h2 id="song-title"></h2>
    <p id="artist-name"></p>
    <p id="song-duration"></p>
  </div>
  
  <div class="library">
    <% songs.forEach(function(song) { %>
      <div class="library-item" onclick="loadSong('<%- song.path %>')">
        <p><%- song.title %></p>
      </div>
    <% }); %>
  </div>

  <script>
    // JavaScript to update song information
    const audioPlayer = document.getElementById('audio-player');
    const songTitle = document.getElementById('song-title');
    const artistName = document.getElementById('artist-name');
    const songDuration = document.getElementById('song-duration');

    const songs = '<%- JSON.stringify(songs) %>';

    audioPlayer.addEventListener('loadedmetadata', () => {
      const duration = formatTime(audioPlayer.duration);
      songDuration.textContent = `Duration: ${duration}`;
    });

    audioPlayer.addEventListener('play', () => {
      const currentSong = songs.find(song => song.path === audioPlayer.currentSrc);
      if (currentSong) {
        songTitle.textContent = currentSong.title;
        artistName.textContent = currentSong.artist;
      }
    });

    // Function to load a song when clicked from the library
    function loadSong(path) {
      const source = document.createElement('source');
      source.src = path;
      source.type = 'audio/mpeg';
      audioPlayer.innerHTML = '';
      audioPlayer.appendChild(source);
      audioPlayer.load();
      audioPlayer.play();
    }

    function formatTime(seconds) {
      const minutes = Math.floor(seconds / 60);
      const remainingSeconds = Math.floor(seconds % 60);
      const formattedTime = `${minutes}:${remainingSeconds < 10 ? '0' : ''}${remainingSeconds}`;
      return formattedTime;
    }
  </script>
</body>
</html>
